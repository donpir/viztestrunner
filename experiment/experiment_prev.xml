<experiment>
    <testrunner>
        <execution randomise="id-based">
            <execute template="taskTemplate1" image="viz1.png"></execute>
            <execute template="taskTemplate1" image="viz2.png"></execute>
            <execute template="taskTemplate1" image="viz3.png"></execute>
        </execution>
    </testrunner>
    <templates>
        <template id="taskTemplate1" type="tasks">
            <task>
                <question>Quante canzoni ci sono nella visualizzazione?</question>
                <answer type="option">
                    <option label="1"></option>
                    <option label="5"></option>
                    <option label="10"></option>
                    <option label="15"></option>
                    <option label="20"></option>
                    <option type="other" label="other"></option>
                </answer>
            </task>
            <task>
                <question>Secondo te, quante situazioni di plagio esistono nella visualizzazione data?</question>
                <answer type="option">
                    <option label="1"></option>
                    <option label="3"></option>
                    <option label="5"></option>
                    <option label="7"></option>
                    <option label="10"></option>
                    <option type="other" label="other"></option>
                </answer>
            </task>
            <task>
                <question>Secondo te, con quale brano risulta in plagio il brano "Il Postino"?</question>
                <answer type="option">
                    <option label="If I could fly"></option>
                    <option label="Will you be there"></option>
                    <option label="He's so fine"></option>
                    <option label="Nelle mie notti"></option>
                    <option label="Nessun brano"></option>
                </answer>
            </task>
            <task>
                <question>Secondo te, con quale brano risulta in plagio il brano "Billie Jean"?</question>
                <answer type="option">
                    <option label="If I could fly"></option>
                    <option label="Will you be there"></option>
                    <option label="He's so fine"></option>
                    <option label="Nelle mie notti"></option>
                    <option label="Nessun brano"></option>
                </answer>
            </task>
            <task>
                <question>Dati i brani "Will you be there" e "I cigni di balaka", quanto sembrano simili i due brani?</question>
                <answer type="range" valueFrom="1" valueTo="5" labelFrom="Per niente simili" labelTo="Molto simili"></answer>
            </task>
            <task>
                <question>Dati i brani "Will you be there" e "Il postino", quanto sembrano simili i due brani?</question>
                <answer type="range" valueFrom="1" valueTo="5" labelFrom="Per niente simili" labelTo="Molto simili"></answer>
            </task>
        </template>
    </templates>

</experiment>