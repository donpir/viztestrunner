    </task>
    <task id="taskTemplate2">
        <subtask>
            <question>Quanto sembrano simili i due brani indicati?</question>
            <image src=""></image>
            <answer type="range" valueFrom="1" valueTo="10" labelFrom="Per niente simili" labelTo="Molto simili"></answer>
        </subtask>
    </task>

</experiment>