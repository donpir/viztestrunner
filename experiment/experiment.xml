<experiment>
    <testrunner>
        <execution randomise="id-based">
            <execute template="taskTemplate1" image="viz1.png"></execute>
            <execute template="taskTemplate1" image="viz2.png"></execute>
            <execute template="taskTemplate1" image="viz3.png"></execute>
            <execute template="taskTemplate2" image="vizNodes1.png"></execute>
            <execute template="taskTemplate2" image="vizNodes2.png"></execute>
        </execution>
    </testrunner>
    <templates>
        <template id="taskTemplate1" type="tasks">
            <task>
                <question>Quante canzoni ci sono?</question>
                <answer type="option">
                    <option label="1"></option>
                    <option label="3"></option>
                    <option label="5"></option>
                    <option label="7"></option>
                    <option label="10"></option>
                    <option type="other" label="other"></option>
                </answer>
            </task>
            <task>
                <question>Quante canzoni sono in plagio?</question>
                <answer type="option">
                    <option label="1"></option>
                    <option label="3"></option>
                    <option label="5"></option>
                    <option label="7"></option>
                    <option label="10"></option>
                    <option type="other" label="other"></option>
                </answer>
            </task>
            <task>
                <question>Con quale brano risulta in plagio "X"?</question>
                <answer type="option">
                    <option label="brano 1"></option>
                    <option label="brano 2"></option>
                    <option label="brano 3"></option>
                    <option label="brano 4"></option>
                    <option label="brano 5"></option>
                    <option label="Nessun plagio"></option>
                </answer>
            </task>
            <task>
                <question>Con quale brano risulta in plagio "Y"?</question>
                <answer type="option">
                    <option label="brano 1"></option>
                    <option label="brano 2"></option>
                    <option label="brano 3"></option>
                    <option label="brano 4"></option>
                    <option label="brano 5"></option>
                    <option label="Nessun plagio"></option>
                </answer>
            </task>
        </template>
        <template id="taskTemplate2" type="tasks">
            <task>
                <question>Quanto sembrano simili i due brani indicati?</question>
                <answer type="range" valueFrom="1" valueTo="10" labelFrom="Per niente simili" labelTo="Molto simili"></answer>
            </task>
        </template>
    </templates>

</experiment>